        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:paddingTop="10dp"
            android:background="@drawable/border_bottom" />

    </LinearLayout>

    <!-- Lottie Animation in the middle of the screen -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="https://lottie.host/549b8070-a539-47c3-814f-752b02eed806/hH4wJBnejN.json" />


    <!-- Main Get Started Button below the animation -->
    <Button
        android:id="@+id/button_camera"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="130dp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:paddingHorizontal="32dp"
        android:textColor="?attr/colorOnSurface"
        android:paddingVertical="8dp"
        style="?attr/materialIconButtonOutlinedStyle"
        app:icon="@drawable/start"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        app:backgroundTint="?attr/colorSecondaryContainer"
        app:iconTint="?attr/colorOnSurface"
        />

    <!-- Info and Settings Buttons aligned horizontally below the Get Started Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/button_info"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textSize="19sp"
            android:paddingHorizontal="30dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginEnd="8dp"
            style="?attr/materialIconButtonOutlinedStyle"
            app:icon="@drawable/info"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:iconTint="?attr/colorOnSurface"

            />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="140dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="19sp"
            android:layout_marginStart="80dp"
            android:paddingHorizontal="13dp"
            style="?attr/materialIconButtonOutlinedStyle"
            app:icon="@drawable/settings"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:iconTint="?attr/colorOnSurface"
            />

    </LinearLayout>

